source 'https://github.com/CocoaPods/Specs.git'

platform :ios, '9.0'
use_frameworks!
inhibit_all_warnings!

def default_pods
    
    # Networking
    pod 'Alamofire', "4.5.1"
    
    # UI
    pod 'Texture', "2.4"
    pod 'Texture/IGListKit', "2.4"
    
    # Utility
    pod 'NohanaImagePicker', "0.8.0"
    pod 'SwiftyJSON', "3.1.4"
        
    # Social
    pod 'FBSDKCoreKit', "4.26.0"
    pod 'FBSDKLoginKit', "4.26.0"
    pod 'FBSDKShareKit', "4.26.0"
    pod 'SimpleAuth/Facebook', "0.3.9"
    pod 'SimpleAuth/Instagram', "0.3.9"
    pod 'SimpleAuth/LinkedInWeb', "0.3.9"
    
    # Google
    pod 'GoogleMaps', "2.4.0"
    
    # Dependencies
    pod 'ReactiveCocoa', "2.4.7"
    
end

target 'Sismo' do
    default_pods
end

